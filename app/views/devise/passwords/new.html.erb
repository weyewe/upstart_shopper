<header>
  <div class='container'>
    <h1>Forgot your password?</h1>
    <p class='lead'>Reset instructions</p>
  </div>
</header>
<div class='container'>
  <div class='row'>
    <div class='span7 offset3'>
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "well well-elderflower no-actions" }) do |f| %>
        <%= devise_error_messages! %>
        <%= content_tag :fieldset do %>
          <legend>Can't sign in? Forgot Your password?</legend>
          <p>Enter your email address below and we'll send you password reset instructions.</p>
          <p>
            <%= f.email_field :email, placeholder: 'Your email address', autofocus: 'autofocus', class: 'span4' %><br>
            <%= f.submit "Send me reset instructions", class: 'btn btn-success' %>
          </p>
        <% end %>
      <% end %>
      <div align='center'>
        <small>Send me back to <%= render "devise/shared/sign_in" %> or <%= render "devise/shared/sign_up" %></small>
      </div>
    </div>
  </div>
</div>